# TP2 - exercice 2 (Jeu de devinettes)



import random

While True:
    aleatoire = random.randint(0,100)
    essai = 0

    print("Bonjour!\nJ’ai choisi un nombre entre 0 et 100. À vous de le deviner…")

    # Je permets à l’utilisateur de faire plusieurs essais
    while True:
        chiffre = int(input("Entrez votre essai: "))

        # Nombre d’essais augmente
        essai += 1

        # Le chiffre est plus petit que le chiffre recherché
        if aleatoire > chiffre:
            print("Mauvaise réponse! Votre chiffre est plus petit.")

        # Le chiffre est plus grand que le chiffre recherché
        elif aleatoire < chiffre:
            print("Mauvaise réponse! Votre chiffre est plus grand.")

        # Le chiffre est deviner
        else:
            print(f"Bravo! Bonne réponse.\nVous avez réussi en: {essai} essai(s).")
            break

        # Je demande si l’utilisateur veut jouer une autre partie
        partie2 = input("Souhaitez-vous rejouer à ce jeu de devinettes? (‘O’ pour oui et ‘N’ pour non)")

        # L’utilisateur ne veut pas jouer une autre partie
        if partie2.upper() == 'N':
            print("Merci et au revoir!")
            break

        # L’utilisateur veut jouer une autre partie
        else:
            # Je continue la boucle pour une nouvelle partie
            continue
